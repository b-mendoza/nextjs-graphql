{
  "name": "next-graphql",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "codegen": "rimraf src/generated && rimraf \"*.gql\" && npm run codegen:schema && npm run codegen:types",
    "codegen:schema": "apollo client:download-schema --endpoint=https://rickandmortyapi.com/graphql schema.gql",
    "codegen:types": "apollo client:codegen --target typescript --localSchemaFile schema.gql --outputFlat --includes \"lib/queries/**/*.ts\" --excludes \"generated\" generated"
  },
  "dependencies": {
    "@apollo/client": "^3.3.16",
    "@chakra-ui/icons": "^1.0.12",
    "@chakra-ui/react": "^1.6.0",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "framer-motion": "^4.1.11",
    "graphql": "^15.5.0",
    "next": "^10.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "apollo": "^2.32.13",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
