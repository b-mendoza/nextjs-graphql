{
  "name": "next-graphql",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "codegen": "rimraf generated *.gql && npm run codegen:schema && npm run codegen:types",
    "codegen:schema": "apollo client:download-schema --endpoint=https://rickandmortyapi.com/graphql/ schema.gql",
    "codegen:types": "apollo client:codegen --target typescript --localSchemaFile schema.gql --outputFlat --includes \"lib/queries/**/*.ts\" --excludes \"generated\" generated"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@chakra-ui/icons": "^1.0.14",
    "@chakra-ui/react": "^1.6.5",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "framer-motion": "^4.1.17",
    "graphql": "^15.5.1",
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.12.1"
  },
  "devDependencies": {
    "@types/node": "^16.4.3",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "apollo": "^2.33.4",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  }
}
